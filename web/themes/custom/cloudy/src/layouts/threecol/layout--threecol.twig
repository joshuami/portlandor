{#
/**
 * @file
 * Default theme implementation to display a three column bricks layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% set layout_classes = layout_classes|default(['row']) %}
{% set first_aside_classes = first_aside_classes|default(['col']) %}
{% set main_classes = main_classes|default(['col']) %}
{% set second_aside_classes = second_aside_classes|default(['col']) %}


<div class="{{ layout_classes|join(' ') }}">
  <section class="{{ first_aside_classes|join(' ') }}">
    {{ first_aside }}
  </section>
  <section class="{{ main_classes|join(' ') }}">
    {{ main }}
  </section>
  <section class="{{ second_aside_classes|join(' ') }}">
    {{ second_aside }}
  </section>
</div>
