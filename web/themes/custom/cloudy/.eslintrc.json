{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2020": true,
    "jquery": true
  },
  "globals": {
    "Drupal": true,
    "drupalSettings": true,
    "drupalTranslations": true,
    "domready": true,
    "jQuery": true,
    "_": true,
    "matchMedia": true,
    "Backbone": true,
    "Modernizr": true,
    "CKEDITOR": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "off"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
